                @{int i=0; }

                @foreach (var st in ViewBag.Stories)
                {
                    <div class="row">
                        <div class="col-lg-3 col-xs-6">
                            <!-- small box -->
                            <div class="small-box bg-red">
                                <div class="inner">
                                    <h4>@st.storyName</h4>

                                    <p>@st.storyDeadline</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-pie-graph"></i>
                                </div>
                                <a href="#" class="small-box-footer">
                                    More info <i class="fa fa-arrow-circle-right"></i>
                                </a>
                            </div>
                        </div>
                      
                        @for (i = 3; i >= 1; i--)
                        {
                            <div class="col-lg-3 col-xs-6">

                                @foreach (var tk in ViewBag.Tasks)
                                {
                                    if (tk.storyId == st.storyId)
                                    {
                                        if (tk.categoryId == i)
                                        {
                                            <div class="box box-primary">
                                                <div class="box-header">
                                                    <i class="ion ion-clipboard"></i>
                                                    <h3 class="box-title">To Do List</h3>
                                                </div>
                                                <!-- /.box-header -->
                                                <div class="box-body">
                                                    <!-- See dist/js/pages/dashboard.js to activate the todoList plugin -->
                                                    <ul class="todo-list">
                                                        <li>
                                                            <!-- drag handle -->
                                                            <span class="handle">
                                                                <i class="fa fa-ellipsis-v"></i>
                                                                <i class="fa fa-ellipsis-v"></i>
                                                            </span>
                                                            <!-- checkbox -->
                                                            <input type="checkbox" value="">
                                                            <!-- todo text -->
                                                            <span class="text">@tk.taskName</span>
                                                            <!-- Emphasis label -->
                                                            <small class="label label-danger"><i class="fa fa-clock-o"></i> @tk.Working.name @tk.Working.surname </small>
                                                            <!-- General tools such as edit or delete-->
                                                            <div class="tools">
                                                                <i class="fa fa-edit"></i>
                                                                <i class="fa fa-trash-o"></i>
                                                            </div>
                                                        </li>

                                                    </ul>
                                                </div>
                                                <!-- /.box-body -->
                                                <div class="box-footer clearfix no-border">
                                                    <button type="button" class="btn btn-default pull-right"><i class="fa fa-plus"></i> Add item</button>
                                                </div>
                                            </div>
                                        }

                                    }
                                }
                            </div>
                        }
                        </div>
               }




