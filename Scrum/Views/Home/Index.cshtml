                <script type="text/javascript">
                    $(function () {

                        $(".category").click(function () {
                            var taskId=$(this).attr('taskId');
                            var categoryId = $(this).attr('categoryId');
                          
                            $.ajax({
                                type: 'POST',
                                url: '/Home/UpdateTaskCategory',
                                data: { taskId: taskId, categoryId: categoryId},
                                success: function () {
                                }
                            });
                            location.reload();
                        });

                      
                    });
                </script>
            }
